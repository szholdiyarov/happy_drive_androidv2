                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.PortfolioActivity"
            android:label="@string/app_name"/>
        <activity android:name=".ui.StorageActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.CardEditActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.AuthActivity"
            android:label="@string/app_name"
            android:noHistory="true"/>
        <activity
            android:name=".ui.auth.MainLoginActivity"
            android:label="@string/title_activity_main_login">
        </activity>
        <activity
            android:name=".ui.auth.EmailLoginActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity

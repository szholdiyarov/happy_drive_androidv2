<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promote_block_bkg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_promote_instagram_container"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bkg" />

        <ImageView
            android:id="@+id/fragment_promote_instagram_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </FrameLayout>

    <Button
        android:id="@+id/fragment_promote_instagram_btn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/promote_btn_bkg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="ОПУБЛИКОВАТЬ"
        android:textColor="@color/app_white" />
</LinearLayout>
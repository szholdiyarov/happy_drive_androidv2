<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promote_block_bkg">

    <TextView
        android:id="@+id/fragment_promote_link_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:text="@string/promote_link"
        android:textColor="@color/app_black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/fragment_promote_link_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_promote_link_tv_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/promote_btn_bkg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="КОПИРОВАТЬ ССЫЛКУ"
        android:textColor="@color/app_white" />
</RelativeLayout>
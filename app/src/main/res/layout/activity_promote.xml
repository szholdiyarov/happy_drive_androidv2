<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bkg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_toolbar_height"
        android:background="#b5201e4b"
        tools:ignore="MissingPrefix">

        <ImageButton
            android:id="@+id/activity_promote_toolbar_fake_back_btn"
            android:layout_width="@dimen/fake_toolbar_icon_size"
            android:layout_height="@dimen/fake_toolbar_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_drawer_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/Roboto-Light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="РАСКРУТКА"
                android:textColor="#a3a1b6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_promote_toolbar_fake_tv_title"
                fontPath="fonts/Roboto-Light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:textColor="@color/app_white"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/indicator_container"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />

        <TextView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/promote_indicator_bkg"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/promote_indicator_color"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ScrollView
        android:id="@+id/fragment_card_edit_main_scroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Имя *"
                android:textColor="#6000" />

            <EditText
                android:id="@+id/fragment_card_edit_main_et_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите имя"
                android:inputType="textPersonName|textCapWords"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="16dp"
                android:text="Фамилия"
                android:textColor="#6000" />

            <EditText
                android:id="@+id/fragment_card_edit_main_et_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите фамилию"
                android:inputType="textPersonName|textCapWords"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="16dp"
                android:text="Телефон *"
                android:textColor="#6000" />

            <EditText
                android:id="@+id/fragment_card_edit_main_et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите номер телефона"
                android:inputType="numberDecimal|phone"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="16dp"
                android:text="Категория *"
                android:textColor="#6000" />

            <Spinner
                android:id="@+id/fragment_card_edit_main_spinner_category"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="16dp"
                android:text="Место работы"
                android:textColor="#6000" />

            <EditText
                android:id="@+id/fragment_card_edit_main_et_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите название компании"
                android:inputType="text|textCapSentences"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="16dp"
                android:text="Должность *"
                android:textColor="#6000" />

            <EditText
                android:id="@+id/fragment_card_edit_main_et_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Укажите должность"
                android:inputType="text|textCapSentences"
                android:singleLine="true" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
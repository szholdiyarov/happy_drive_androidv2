<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/promote_block_bkg"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/fragment_promote_whatsapp_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        android:text="Введите текст для отправки друзьям"
        android:textColor="@color/app_black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/fragment_promote_whatsapp_et"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/bkg_bordered"
        android:gravity="top"
        android:inputType="textMultiLine|textLongMessage|text"
        android:padding="8dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/fragment_promote_whatsapp_btn"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/promote_btn_bkg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="ОТПРАВИТЬ"
        android:textColor="@color/app_white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_toolbar_height">

        <ImageButton
            android:id="@+id/activity_card_menu_fake_toolbar_back"
            android:layout_width="@dimen/fake_toolbar_icon_size"
            android:layout_height="@dimen/fake_toolbar_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_drawer_back" />
    </FrameLayout>

    <TextView
        android:id="@id/action_edit_card"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="12dp"
        android:text="Редактировать визитку"
        android:textColor="@color/auth_tv_password_recovery"
        android:textSize="14sp" />

    <View
        android:layout_width="60dp"
        android:layout_height=".8dp"
        android:background="#70cecece" />

    <TextView
        android:id="@id/action_change_background"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="12dp"
        android:text="Изменить фон визитки"
        android:textColor="@color/auth_tv_password_recovery"
        android:textSize="14sp" />

    <View
        android:layout_width="60dp"
        android:layout_height=".8dp"
        android:background="#70cecece" />

    <TextView
        android:id="@id/action_change_avatar"
        fontPath="fonts/Roboto-Light.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:padding="12dp"
        android:text="Изменить фото"
        android:textColor="@color/auth_tv_password_recovery"
        android:textSize="14sp" />
</LinearLayout>
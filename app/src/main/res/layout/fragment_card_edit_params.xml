<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:text="Имя *"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите имя"
            android:inputType="textPersonName|textCapWords"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Фамилия"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите фамилию"
            android:inputType="textPersonName|textCapWords"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Отчество"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите отчество"
            android:inputType="textPersonName|textCapWords"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Должность *"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Укажите должность"
            android:inputType="text|textCapSentences"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Место работы"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите название компании"
            android:inputType="text"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Телефон *"
            android:inputType="text|textCapSentences"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите номер телефона"
            android:inputType="numberDecimal|phone"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="E-mail"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите электронный адрес"
            android:inputType="text|textEmailAddress"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Веб-сайт"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите адрес веб-сайта"
            android:inputType="text|textUri"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Категория *"
            android:textColor="#6000"/>

        <Spinner
            android:id="@+id/select_category"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="Адрес"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите адрес компании"
            android:inputType="text|textPostalAddress"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingTop="16dp"
            android:text="О себе"
            android:textColor="#6000"/>

        <EditText
            android:id="@+id/input_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Укажите информацию о себе"
            android:inputType="text|textCapSentences"/>
    </LinearLayout>
</ScrollView>
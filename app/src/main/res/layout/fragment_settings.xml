<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="2dp"
              android:padding="10dp"
              android:divider="@drawable/divider"
              android:dividerPadding="12dp"
              android:dividerHeight="1dp"
              android:showDividers="middle">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="10dp">

        <ImageView
                android:id="@+id/hide_icon"
                android:src="@drawable/hide_icon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="6dip"
                />
        <ImageButton
                android:id="@+id/ibShow"
                android:src="@drawable/btn_switch_pressed"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dip"
                android:background="@null"
                />
        <TextView
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/hide_icon"
                android:text="@string/action_hide"
                android:paddingTop="9dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/textView1"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="1dp"
        android:background="#bbb"/>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="10dp"
            android:clickable="true">

        <ImageView
                android:id="@+id/logout_icon"
                android:src="@drawable/logout_icon"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="6dip"
                android:textColor="@color/colorPrimaryDark"
                />
        <TextView
                android:id="@+id/tvExit"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/logout_icon"
                android:text="@string/action_exit"
                android:paddingTop="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:id="@+id/fragment_card_fake_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fake_toolbar_height"
        android:background="#b5201e4b">

        <ImageButton
            android:id="@+id/fragment_card_toolbar_fake_drawer_toggler"
            android:layout_width="@dimen/fake_toolbar_icon_size"
            android:layout_height="@dimen/fake_toolbar_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_drawer_icon" />

        <ImageButton
            android:id="@+id/fragment_card_toolbar_fake_card_edit"
            android:layout_width="@dimen/fake_toolbar_icon_size"
            android:layout_height="@dimen/fake_toolbar_icon_size"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_fake_toolbar_card_edit"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/card_edit_top_logo" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_card_fake_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/card_block_bkg"
                android:paddingBottom="16dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/fragment_card_img_view_avatar"
                    android:layout_width="86dp"
                    android:layout_height="86dp" />

                <ImageButton
                    android:id="@+id/fragment_card_img_button_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/fragment_card_img_view_avatar"
                    android:layout_alignTop="@id/fragment_card_img_view_avatar"
                    android:background="@null"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_photo_camera" />

                <ImageButton
                    android:id="@+id/fragment_card_img_button_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/fragment_card_img_view_avatar"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="-16dp"
                    android:alpha=".9"
                    android:background="@null"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_card_share" />

                <LinearLayout
                    android:id="@+id/fragment_card_v_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/fragment_card_img_view_avatar"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_card_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2c2c2c"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/fragment_card_tv_position"
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:textColor="#949494"
                        android:textSize="14sp" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="6dp" />

                    <TextView
                        android:id="@+id/fragment_card_tv_work_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2c2c2c"
                        android:textSize="14sp" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="8dp" />

                    <LinearLayout
                        android:id="@+id/fragment_card_ll_phone_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/fragment_card_img_view_phone"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="1dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_card_call" />

                        <android.support.v4.widget.Space
                            android:layout_width="6dp"
                            android:layout_height="0px" />

                        <TextView
                            android:id="@+id/fragment_card_tv_phone"
                            fontPath="fonts/Roboto-Light.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#2c2c2c"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/separator_email"
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:background="#e3e3e3e3" />

                    <LinearLayout
                        android:id="@+id/fragment_card_ll_email_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/fragment_card_img_view_email"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_card_email" />

                        <android.support.v4.widget.Space
                            android:layout_width="6dp"
                            android:layout_height="0px" />

                        <TextView
                            android:id="@+id/fragment_card_tv_email"
                            fontPath="fonts/Roboto-Light.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#2c2c2c"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/separator_address"
                        android:layout_width="match_parent"
                        android:layout_height=".8dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="4dp"
                        android:background="#e3e3e3e3" />

                    <LinearLayout
                        android:id="@+id/fragment_card_ll_address_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/fragment_card_img_view_address"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_card_email_loc" />

                        <android.support.v4.widget.Space
                            android:layout_width="6dp"
                            android:layout_height="0px" />

                        <TextView
                            android:id="@+id/fragment_card_tv_address"
                            fontPath="fonts/Roboto-Light.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#2c2c2c"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_card_details_create_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_create_card" />

                    <android.support.v4.widget.Space
                        android:layout_width="0px"
                        android:layout_height="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Приветствуем Вас!"
                        android:textColor="#2c2c2c"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="СОЗДАЙТЕ ВИЗИТКУ В\nНЕСКОЛЬКО ШАГОВ"
                        android:textColor="#949494"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/fragment_card_btn_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/promote_btn_bkg"
                        android:paddingBottom="0px"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="0px"
                        android:text="СОЗДАТЬ ВИЗИТКУ"
                        android:textColor="@color/app_white" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_card_rl_about_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:alpha=".8"
                android:background="@drawable/card_block_bkg">

                <ImageView
                    android:id="@+id/fragment_card_img_btn_about_expander"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_expand" />

                <TextView
                    android:id="@+id/fragment_card_tv_about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="14dp"
                    android:paddingTop="14dp"
                    android:textAllCaps="true"
                    android:textColor="#25234f"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fragment_card_tv_about_text"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fragment_card_tv_about_title"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#2c2c2c"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_card_rl_portfolio_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fragment_card_tv_portfolio_photo"
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="6dp"
                        android:drawableTop="@drawable/ic_card_photo_86p"
                        android:gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:text="ФОТОГРАФИИ"
                        android:textColor="@color/app_white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fragment_card_tv_portfolio_photo_counter"
                        fontPath="fonts/Roboto-Bold.ttf"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bkg_counter"
                        android:gravity="center"
                        android:textColor="#2f2f2f"
                        android:textSize="10sp" />
                </FrameLayout>

                <ImageButton
                    android:id="@+id/fragment_card_img_button_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_card_audio_60p" />

                <FrameLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fragment_card_tv_portfolio_video"
                        fontPath="fonts/Roboto-Light.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="6dp"
                        android:drawableTop="@drawable/ic_card_video_86p"
                        android:gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:text="ВИДЕОЗАПИСИ"
                        android:textColor="@color/app_white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fragment_card_tv_portfolio_video_counter"
                        fontPath="fonts/Roboto-Bold.ttf"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/bkg_counter"
                        android:gravity="center"
                        android:textColor="#2f2f2f"
                        android:textSize="10sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.AppTheme">
        <item name="mediumButtonStyle">@style/Widget.MediumButton</item>
    </style>

    <style name="Base.AppTheme.Translucent"/>
    <style name="Base.AppTheme.Translucent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget"/>
    <style name="Widget.MediumButton" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="Widget.EditText"/>
    <style name="Widget.EditText.Auth">
        <item name="android:background">@color/app_white</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#acacac</item>
        <item name="android:textSize">14sp</item>

    </style>
</resources>
